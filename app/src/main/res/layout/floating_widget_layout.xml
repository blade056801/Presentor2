<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height">

    <!--   Root container of Floating Widget View  -->
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!--  View while view is collapsed  -->
        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!--   ImageView of floating widget  -->
            <ImageView
                android:id="@+id/collapsed_iv"
                android:layout_width="@dimen/big_dimen"
                android:layout_height="@dimen/big_dimen"
                android:src="@drawable/ic_splash_logo"
                tools:ignore="ContentDescription"
                android:layout_centerInParent="true"
                android:elevation="5dp"/>

        </RelativeLayout>

        <!--   View while view is expanded   -->
        <RelativeLayout
            android:id="@+id/expanded_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone">

            <!--Stop button-->
            <ImageButton
                android:id="@+id/circleIv1"
                android:layout_width="@dimen/widget_button_dimen"
                android:layout_height="@dimen/widget_button_dimen"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_widget_button"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_stop_screenshare"
                tools:ignore="ContentDescription"
                android:padding="10dp"/>

            <!--Pause/Play button-->
            <ImageButton
                android:id="@+id/circleIv2"
                android:layout_width="@dimen/widget_button_dimen"
                android:layout_height="@dimen/widget_button_dimen"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_widget_button"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_pause_screenshare"
                tools:ignore="ContentDescription"/>

            <!--Screen Pin button-->
            <ImageButton
                android:id="@+id/circleIv3"
                android:layout_width="@dimen/widget_button_dimen"
                android:layout_height="@dimen/widget_button_dimen"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_widget_button"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_screen_pin"
                tools:ignore="ContentDescription"/>

            <!--Face Analysis button-->
            <ImageButton
                android:id="@+id/circleIv4"
                android:layout_width="@dimen/widget_button_dimen"
                android:layout_height="@dimen/widget_button_dimen"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_widget_button"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_face_analysis"
                tools:ignore="ContentDescription"/>

            <!--Domotics button-->
            <ImageButton
                android:id="@+id/circleIv5"
                android:layout_width="@dimen/widget_button_dimen"
                android:layout_height="@dimen/widget_button_dimen"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_widget_button"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_domotics"
                tools:ignore="ContentDescription"/>

            <!--Open Lobby create/access-->
            <ImageButton
                android:id="@+id/circleIv6"
                android:layout_width="@dimen/widget_button_dimen"
                android:layout_height="@dimen/widget_button_dimen"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/background_widget_button"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_show_main_layout"
                tools:ignore="ContentDescription"/>

            <!--Move/Drag button-->
            <ImageView
                android:id="@+id/holder_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:elevation="5dp"
                android:src="@drawable/widget_button_icon_drag"
                tools:ignore="ContentDescription"/>


            <ImageView
                android:id="@+id/floating_widget_image_view"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_widget_main"
                android:src="@drawable/widget_button_icon_expanded_view"
                android:elevation="5dp"
                tools:ignore="ContentDescription"
                android:padding="10dp" />


        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>