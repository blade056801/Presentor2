<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="70dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="52dp"
            android:layout_height="62dp"
            android:src="@drawable/ic_phone_android"
            />

        <TextView
            android:id="@+id/client_service_number"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/list_item_icon"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVICE"/>

        <TextView
            android:id="@+id/client_IP_address"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/list_item_icon"
            android:layout_below="@+id/client_service_number"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address"/>

        <TextView
            android:id="@+id/client_port_number"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/list_item_icon"
            android:layout_below="@+id/client_IP_address"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PORT"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>